{
    "compilerOptions": {
      "declaration": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "lib": [
        "es2018",
        "dom"
      ],
      "baseUrl": "src",
      "paths": {
        "@app/*": ["app/*"]
      },
      "mapRoot": "./",
      "module": "es2020",
      "moduleResolution": "node",
      "outDir": "../dist/out-tsc",
      "sourceMap": true,
      "target": "es2015",
      
      "typeRoots": [
        "../node_modules/@types"
      ]
    },
    "include": ["src/**/*"],
"exclude": ["node_modules", "**/*.spec.ts"]
  }
