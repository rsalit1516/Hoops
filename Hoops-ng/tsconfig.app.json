{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@app/*": ["app/*"]
    },
    "outDir": "../dist/out-tsc/app",
    "mapRoot": "./",
    "module": "esNext",
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "es6",
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  "files": [
    "./src/main.ts",
    "./src/polyfills.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "src/test.ts",
    "**/*.spec.ts"
  ]
}