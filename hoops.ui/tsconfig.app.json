/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [
      "@angular/localize"
    ]
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ],
  "paths": {
    "@app/*": [
      "src/app/*"
    ],
    "@domain": [
      "src/app/domain/*"
    ],
    "@shared": ["src/app/shared/*"],
    "@content": [
      "content/*"
    ]
  },
}
